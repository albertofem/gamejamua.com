{% extends 'GameJamCompoBundle::layout.html.twig' %}

{% block active_index %} class="active"{% endblock %}

{% block content %}
    <div class="section featured">
        <div class="col-md-4">
            <a href="{{ path('gamejam_compo_frontend_about') }}">
                <div class="box what">
                    <h2>¿Que es GameJamUA?</h2>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a href="">
                <div class="box register">
                    <h2>¡Inscríbete aquí!</h2>
                    <div class="description">Incripción cerrada.</div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a href="">
                <div class="box games">
                    <h2>Nuestros juegos</h2>
                </div>
            </a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>

    <div class="section">
        <h2><i class="fa fa-bullhorn"></i> Noticias y novedades</h2>
        <div class="news">
            {% for new in news %}
                {{ time_diff(new.date) }} - {{ new }}
            {% endfor %}
        </div>
    </div>
{% endblock %}